<div class="container mt-5">
  <h1> <%= @restaurant.name %></h1>

  <p>City: <%= @restaurant.address %></p>
  <p>Category: <%= @restaurant.category %></p>
  <% phone_number = if @restaurant.phone_number = "" %>
                    <% "No phone number" %>
                    <% end %>
  <p>Phone Number: <%= phone_number %></p>

  <p><strong>Reviews</strong></p>

  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %></li>
    <% end %>
  </ul>

  <button><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></button>
  <button><%= link_to "Back to restaurants list", restaurants_path %></button>
</div>
